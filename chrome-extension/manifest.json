{
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "버스터 콜"
  },
  "icons": {
    "128": "icon.png",
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://localhost:8000/*",
    "http://*.gencode.me/*"
  ],
  "manifest_version": 2,
  "name": "버스터 콜",
  "description": "현재 보고 있는 기사에 버스터 콜을 날립니다.",
  "version": "0.8"
}
